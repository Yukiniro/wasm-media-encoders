  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "vitest",
        "--testTimeout",
        "10000000",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
    },
    {
      "name": "Debug current file",
      "request": "launch",
      "runtimeArgs": [
        "-r",
        "${workspaceFolder}/.pnp.js",
        "-r",
        "ts-node/register",
        "--inspect-brk",
        "${file}"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    }
  ]
}